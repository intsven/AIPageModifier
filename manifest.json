{
  "name": "AI Page Modifier",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Edit the page live with Gemini AI.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "activeTab", "tabs", "<all_urls>"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "host_permissions_old": ["<all_urls>"],
  "browser_action": {
    "default_popup": "sidepanel/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Chat Interface"
  }
}
